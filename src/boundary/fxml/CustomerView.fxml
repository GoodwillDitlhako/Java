<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.controllers.CustomerController">
   <children>
      <Label text="Customer Management">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <VBox spacing="10.0">
         <children>
            <Label text="Customer ID:" />
            <TextField fx:id="customerIdField" />
            <Label text="First Name:" />
            <TextField fx:id="firstNameField" />
            <Label text="Last Name:" />
            <TextField fx:id="lastNameField" />
            <Label text="Address:" />
            <TextField fx:id="addressField" />
         </children>
      </VBox>
      
      <HBox spacing="10.0">
         <children>
            <Button fx:id="createButton" mnemonicParsing="false" onAction="#handleCreateCustomer" text="Create Customer" />
            <Button fx:id="viewButton" mnemonicParsing="false" onAction="#handleViewCustomers" text="View Customers" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back" />
         </children>
      </HBox>
      
      <Label text="Output:" />
      <TextArea fx:id="outputArea" prefHeight="200.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
